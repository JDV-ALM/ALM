<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Product Category Form View -->
    <record id="product_category_form_view_inherit" model="ir.ui.view">
        <field name="name">product.category.form.inherit.company</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <!-- Add company_id field after parent_id -->
            <xpath expr="//field[@name='parent_id']" position="after">
                <field name="company_id" groups="base.group_multi_company"/>
            </xpath>
        </field>
    </record>
    
    <!-- Inherit Product Category List View -->
    <record id="product_category_list_view_inherit" model="ir.ui.view">
        <field name="name">product.category.list.inherit.company</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_list_view"/>
        <field name="arch" type="xml">
            <!-- Add company_id to tree view -->
            <xpath expr="//field[@name='display_name']" position="after">
                <field name="company_id" groups="base.group_multi_company"/>
            </xpath>
        </field>
    </record>
    
    <!-- Inherit Product Category Search View -->
    <record id="product_category_search_view_inherit" model="ir.ui.view">
        <field name="name">product.category.search.inherit.company</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_search_view"/>
        <field name="arch" type="xml">
            <!-- Add company filter -->
            <xpath expr="//search" position="inside">
                <field name="company_id" groups="base.group_multi_company"/>
                <separator/>
                <filter string="My Company" name="filter_my_company" 
                        domain="[('company_id', '=', company_id)]"/>
                <group expand="0" string="Group By">
                    <filter string="Company" name="groupby_company" 
                            domain="[]" context="{'group_by': 'company_id'}"
                            groups="base.group_multi_company"/>
                </group>
            </xpath>
        </field>
    </record>
    
    <!-- Update Product Form/Tree Views Context -->
    <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit.categ.company</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- Ensure category selection is filtered by company -->
            <xpath expr="//field[@name='categ_id']" position="attributes">
                <attribute name="domain">[('company_id', 'in', [company_id, False])]</attribute>
            </xpath>
        </field>
    </record>
</odoo>