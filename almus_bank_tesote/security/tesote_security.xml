<?xml version="1.0" encoding="utf-8"?>
<!-- security/tesote_security.xml -->
<odoo>
    <data>
        <!-- Record Rules -->
        <record id="tesote_account_comp_rule" model="ir.rule">
            <field name="name">Tesote Account Company Rule</field>
            <field name="model_id" ref="model_tesote_account"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <record id="tesote_api_log_comp_rule" model="ir.rule">
            <field name="name">Tesote API Log Company Rule</field>
            <field name="model_id" ref="model_tesote_api_log"/>
            <field name="domain_force">['|', ('account_id', '=', False), ('account_id.company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <!-- Security Groups (optional, for advanced control) -->
        <record id="group_tesote_admin" model="res.groups">
            <field name="name">Tesote Administrator</field>
            <field name="category_id" ref="base.module_category_accounting_accounting"/>
            <field name="implied_ids" eval="[(4, ref('account.group_account_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
    </data>
</odoo>
