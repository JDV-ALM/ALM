<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron Job for Automatic Synchronization -->
        <record id="ir_cron_tesote_sync" model="ir.cron">
            <field name="name">Tesote: Sync Bank Transactions</field>
            <field name="model_id" ref="model_tesote_account"/>
            <field name="state">code</field>
            <field name="code">model.cron_sync_all_accounts()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">6</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="False"/>
            <field name="priority">5</field>
        </record>
        
        <!-- Cron Job for Account Refresh (Optional, runs weekly) -->
        <record id="ir_cron_tesote_refresh_accounts" model="ir.cron">
            <field name="name">Tesote: Refresh Account List</field>
            <field name="model_id" ref="model_tesote_account"/>
            <field name="state">code</field>
            <field name="code">model.action_refresh_accounts()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="False"/>
            <field name="priority">10</field>
        </record>
    </data>
</odoo>