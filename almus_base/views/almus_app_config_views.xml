<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista List Simple para mostrar en popup -->
    <record id="view_almus_app_config_simple_list" model="ir.ui.view">
        <field name="name">almus.app.config.simple.list</field>
        <field name="model">almus.app.config</field>
        <field name="arch" type="xml">
            <list string="Aplicaciones Almus" create="false" delete="false" edit="false">
                <field name="sequence" widget="handle" readonly="1"/>
                <field name="display_name" string="Aplicación"/>
                <field name="category" string="Categoría"/>
                <field name="is_enabled" string="Habilitado" readonly="1"/>
                <field name="module_id" string="Módulo" optional="hide"/>
                <field name="description" string="Descripción" optional="show"/>
            </list>
        </field>
    </record>
    
    <!-- Vista Form Mínima -->
    <record id="view_almus_app_config_form" model="ir.ui.view">
        <field name="name">almus.app.config.form</field>
        <field name="model">almus.app.config</field>
        <field name="arch" type="xml">
            <form string="Aplicación Almus" create="false" delete="false">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="module_id" readonly="1"/>
                            <field name="category" readonly="1"/>
                            <field name="is_enabled" readonly="1"/>
                        </group>
                        <group>
                            <field name="sequence" readonly="1"/>
                            <field name="icon" readonly="1"/>
                            <field name="color" readonly="1" widget="color"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Descripción" name="description">
                            <field name="description" readonly="1"/>
                        </page>
                        <page string="Dependencias" name="dependencies">
                            <field name="depends_on" readonly="1"/>
                            <field name="required_by" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Acción para abrir las aplicaciones -->
    <record id="action_almus_app_config_simple" model="ir.actions.act_window">
        <field name="name">Aplicaciones Almus</field>
        <field name="res_model">almus.app.config</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_almus_app_config_simple_list"/>
        <field name="search_view_id" eval="False"/>
        <field name="context">{'create': False, 'delete': False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay aplicaciones Almus configuradas
            </p>
            <p>
                Las aplicaciones Almus se detectan automáticamente cuando se instalan módulos con prefijo 'almus_'.
            </p>
        </field>
    </record>
</odoo>