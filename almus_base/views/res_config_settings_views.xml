<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_almus_base_res_config_settings" model="ir.ui.view">
        <field name="name">almus.base.res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="Almus Dev" string="Almus Dev" name="almus_base">
                    <div class="row mt16 o_settings_container" name="almus_settings">
                        <div class="col-12 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <h2>Panel de Control Almus</h2>
                                    <div class="row mt16">
                                        <div class="col-md-6">
                                            <div class="alert alert-info" role="alert">
                                                <h4 class="alert-heading">
                                                    <i class="fa fa-cube"/> Aplicaciones Instaladas
                                                </h4>
                                                <p class="mb-0">
                                                    <strong><field name="almus_total_apps" class="oe_inline"/> aplicaciones</strong> disponibles
                                                </p>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="alert alert-success" role="alert">
                                                <h4 class="alert-heading">
                                                    <i class="fa fa-check-circle"/> Aplicaciones Activas
                                                </h4>
                                                <p class="mb-0">
                                                    <strong><field name="almus_enabled_apps" class="oe_inline"/> aplicaciones</strong> habilitadas
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mt8">
                                        <button name="action_almus_refresh_apps" 
                                                type="object" 
                                                string="Actualizar Lista" 
                                                class="btn-secondary"
                                                icon="fa-refresh"/>
                                        <button name="action_export_almus_config" 
                                                type="object" 
                                                string="Exportar Configuración" 
                                                class="btn-secondary ms-2"
                                                icon="fa-download"
                                                groups="base.group_system"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <h2 class="mt32">Aplicaciones Almus Disponibles</h2>
                    
                    <!-- Apps Management Section -->
                    <field name="almus_app_ids" invisible="1"/>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12">
                            <p class="text-muted">
                                <i class="fa fa-info-circle"/> Active o desactive las funcionalidades según sus necesidades.
                            </p>
                            <field name="almus_app_ids" widget="one2many" mode="tree">
                                <list string="Aplicaciones" create="false" delete="false" editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="display_name" string="Aplicación" readonly="1"/>
                                    <field name="is_enabled" string="Habilitado" widget="boolean_toggle"/>
                                    <field name="category" string="Categoría" readonly="1"/>
                                    <field name="description" string="Descripción" readonly="1" optional="show"/>
                                </list>
                            </field>
                        </div>
                    </div>
                    
                    <block name="almus_base_settings">
                        <!-- Aquí otros módulos pueden agregar sus configuraciones específicas -->
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>