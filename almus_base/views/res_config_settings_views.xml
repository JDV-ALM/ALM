<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_almus_base_res_config_settings" model="ir.ui.view">
        <field name="name">almus.base.res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="Almus Dev" string="Almus Dev" name="almus_base">
                    <div class="row mt16 o_settings_container" name="almus_settings">
                        <div class="col-12 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <h2>Panel de Control Almus</h2>
                                    <div class="row mt16">
                                        <div class="col-md-6">
                                            <div class="alert alert-info" role="alert">
                                                <h4 class="alert-heading">
                                                    <i class="fa fa-cube"/> Aplicaciones Instaladas
                                                </h4>
                                                <p class="mb-0">
                                                    <strong><field name="almus_total_apps" class="oe_inline"/> aplicaciones</strong> disponibles
                                                </p>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="alert alert-success" role="alert">
                                                <h4 class="alert-heading">
                                                    <i class="fa fa-check-circle"/> Aplicaciones Activas
                                                </h4>
                                                <p class="mb-0">
                                                    <strong><field name="almus_enabled_apps" class="oe_inline"/> aplicaciones</strong> habilitadas
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mt8">
                                        <button name="action_almus_manage_apps" 
                                                type="object" 
                                                string="Gestionar Aplicaciones" 
                                                class="btn-primary"
                                                icon="fa-cogs"/>
                                        <button name="action_export_almus_config" 
                                                type="object" 
                                                string="Exportar Configuración" 
                                                class="btn-secondary ms-2"
                                                icon="fa-download"
                                                groups="base.group_system"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <block name="almus_base_settings">
                        <!-- Aquí otros módulos pueden agregar sus configuraciones específicas -->
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>