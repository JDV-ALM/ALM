<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron para sincronizar aplicaciones Almus -->
        <record id="ir_cron_sync_almus_apps" model="ir.cron">
            <field name="name">Almus: Sincronizar Registro de Aplicaciones</field>
            <field name="model_id" ref="model_almus_app_registry"/>
            <field name="state">code</field>
            <field name="code">model.sync_almus_apps()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="False"/>
        </record>
    </data>
</odoo>