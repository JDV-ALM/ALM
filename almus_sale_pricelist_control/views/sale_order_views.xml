<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario de orden de venta -->
    <record id="view_order_form_inherit_almus_pricelist" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.almus.pricelist</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Modificar la vista de líneas de orden -->
            <xpath expr="//field[@name='order_line']/list/field[@name='price_unit']" position="attributes">
                <!-- Hacer el campo invisible para no administradores cuando esté configurado -->
                <attribute name="invisible">not context.get('is_sale_manager', False) and parent.company_id and context.get('hide_unit_price', False)</attribute>
                <attribute name="readonly">not context.get('is_sale_manager', False) and parent.company_id and context.get('hide_unit_price', False)</attribute>
            </xpath>
            
            <!-- Agregar campo de lista de precios por línea después del producto -->
            <xpath expr="//field[@name='order_line']/list/field[@name='product_id']" position="after">
                <field name="line_pricelist_id" 
                       string="Lista Precios"
                       options="{'no_create': True, 'no_create_edit': True}"
                       invisible="not context.get('show_line_pricelist', False)"
                       domain="[('company_id', 'in', [parent.company_id, False])]"/>
            </xpath>
            
            <!-- Agregar campos computados ocultos -->
            <xpath expr="//field[@name='order_line']/list" position="inside">
                <field name="show_line_pricelist" invisible="1"/>
                <field name="is_price_editable" invisible="1"/>
            </xpath>
        </field>
    </record>
    
    <!-- Vista de formulario de línea de orden (popup) -->
    <record id="view_order_line_form_inherit_almus_pricelist" model="ir.ui.view">
        <field name="name">sale.order.line.form.inherit.almus.pricelist</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_form2"/>
        <field name="arch" type="xml">
            <!-- Agregar campo de lista de precios después del producto -->
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="show_line_pricelist" invisible="1"/>
                <field name="line_pricelist_id" 
                       invisible="not show_line_pricelist"
                       options="{'no_create': True, 'no_create_edit': True}"
                       domain="[('company_id', 'in', [order_id.company_id, False])]"/>
            </xpath>
            
            <!-- Modificar visibilidad del precio unitario -->
            <xpath expr="//field[@name='price_unit']" position="attributes">
                <attribute name="invisible">not is_price_editable</attribute>
                <attribute name="readonly">not is_price_editable</attribute>
            </xpath>
            
            <xpath expr="//field[@name='price_unit']" position="after">
                <field name="is_price_editable" invisible="1"/>
            </xpath>
        </field>
    </record>
    
    <!-- Acción de servidor para establecer contexto -->
    <record id="action_sale_order_almus_context" model="ir.actions.server">
        <field name="name">Órdenes de Venta con Control Almus</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="state">code</field>
        <field name="code">
params = env['ir.config_parameter'].sudo()
is_sale_manager = env.user.has_group('sales_team.group_sale_manager')
hide_unit_price = params.get_param('almus_sale_pricelist_control.hide_unit_price', 'True') == 'True'
show_line_pricelist = params.get_param('almus_sale_pricelist_control.pricelist_per_line', 'True') == 'True'
enabled = params.get_param('almus_sale_pricelist_control.enabled', 'True') == 'True'

action = {
    'type': 'ir.actions.act_window',
    'res_model': 'sale.order',
    'view_mode': 'list,form,kanban,graph,pivot,calendar,activity',
    'context': {
        'is_sale_manager': is_sale_manager,
        'hide_unit_price': enabled and hide_unit_price,
        'show_line_pricelist': enabled and show_line_pricelist,
    }
}
        </field>
    </record>
    
    <!-- Reemplazar la acción del menú de órdenes de venta -->
    <record id="sale.action_quotations_with_onboarding" model="ir.actions.act_window">
        <field name="context">{'is_sale_manager': uid in env['res.users'].search([('groups_id', 'in', env.ref('sales_team.group_sale_manager').id)]).ids}</field>
    </record>
</odoo>