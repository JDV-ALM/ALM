<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_almus_sale_pricelist_control_res_config_settings" model="ir.ui.view">
        <field name="name">almus.sale_pricelist_control.res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="almus_base.view_almus_base_res_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='almus_app_settings']" position="inside">
                <setting id="almus_sale_pricelist_control_settings" 
                         string="Control de Listas de Precios"
                         help="Gestiona el control de edición de listas de precios y precios en órdenes de venta">
                    <div class="content-group">
                        <div class="row mt16">
                            <label for="almus_sale_pricelist_control_enabled" class="col-lg-3 o_light_label"/>
                            <field name="almus_sale_pricelist_control_enabled"/>
                        </div>
                        <div class="row mt8" invisible="not almus_sale_pricelist_control_enabled">
                            <label for="almus_restrict_pricelist_edit" class="col-lg-3 o_light_label"/>
                            <field name="almus_restrict_pricelist_edit"/>
                            <div class="text-muted">
                                Si está activo, solo los administradores de ventas podrán crear, editar o eliminar listas de precios
                            </div>
                        </div>
                        <div class="row mt8" invisible="not almus_sale_pricelist_control_enabled">
                            <label for="almus_hide_unit_price" class="col-lg-3 o_light_label"/>
                            <field name="almus_hide_unit_price"/>
                            <div class="text-muted">
                                Oculta el campo de precio unitario en las líneas de venta para usuarios no administradores
                            </div>
                        </div>
                        <div class="row mt8" invisible="not almus_sale_pricelist_control_enabled">
                            <label for="almus_pricelist_per_line" class="col-lg-3 o_light_label"/>
                            <field name="almus_pricelist_per_line"/>
                            <div class="text-muted">
                                Permite seleccionar una lista de precios diferente para cada línea de la orden de venta
                            </div>
                        </div>
                        <div class="row mt8" invisible="not almus_sale_pricelist_control_enabled">
                            <label for="almus_apply_per_company" class="col-lg-3 o_light_label"/>
                            <field name="almus_apply_per_company"/>
                            <div class="text-muted">
                                Aplicar esta configuración solo a la compañía actual
                            </div>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>