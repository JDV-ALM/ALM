<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de lista con restricciones según el grupo del usuario -->
    <record id="view_almus_product_pricelist_list_restricted" model="ir.ui.view">
        <field name="name">almus.product.pricelist.list.restricted</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view_list"/>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <xpath expr="//list" position="attributes">
                <attribute name="create">env.user.has_group('sales_team.group_sale_manager')</attribute>
                <attribute name="delete">env.user.has_group('sales_team.group_sale_manager')</attribute>
                <attribute name="edit">env.user.has_group('sales_team.group_sale_manager')</attribute>
            </xpath>
        </field>
    </record>
    
    <!-- Vista de formulario con restricciones según el grupo del usuario -->
    <record id="view_almus_product_pricelist_form_restricted" model="ir.ui.view">
        <field name="name">almus.product.pricelist.form.restricted</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view"/>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="create">env.user.has_group('sales_team.group_sale_manager')</attribute>
                <attribute name="delete">env.user.has_group('sales_team.group_sale_manager')</attribute>
                <attribute name="edit">env.user.has_group('sales_team.group_sale_manager')</attribute>
            </xpath>
            <xpath expr="//header" position="attributes">
                <attribute name="invisible">not env.user.has_group('sales_team.group_sale_manager')</attribute>
            </xpath>
            <xpath expr="//sheet//group//field" position="attributes">
                <attribute name="readonly">not env.user.has_group('sales_team.group_sale_manager')</attribute>
            </xpath>
        </field>
    </record>
</odoo>