<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario de orden de venta -->
    <record id="view_almus_sale_order_form" model="ir.ui.view">
        <field name="name">almus.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Agregar campo de lista de precios en las líneas de orden -->
            <xpath expr="//field[@name='order_line']/form//field[@name='product_uom']" position="after">
                <field name="line_pricelist_id" 
                       options="{'no_create': True, 'no_create_edit': True}"
                       groups="base.group_user"/>
            </xpath>
            
            <!-- También agregar en la vista de árbol embebida -->
            <xpath expr="//field[@name='order_line']/list//field[@name='product_uom']" position="after">
                <field name="line_pricelist_id" 
                       optional="show"
                       options="{'no_create': True, 'no_create_edit': True}"
                       groups="base.group_user"/>
            </xpath>
            
            <!-- Hacer el campo price_unit readonly condicionalmente usando un campo computado -->
            <xpath expr="//field[@name='order_line']/list//field[@name='price_unit']" position="attributes">
                <attribute name="readonly">context.get('almus_restrict_price_edit', False) and not context.get('is_sale_manager', False)</attribute>
            </xpath>
            
            <xpath expr="//field[@name='order_line']/form//field[@name='price_unit']" position="attributes">
                <attribute name="readonly">context.get('almus_restrict_price_edit', False) and not context.get('is_sale_manager', False)</attribute>
            </xpath>
        </field>
    </record>
    
    <!-- Vista para actualizar el contexto con las restricciones -->
    <record id="action_almus_sale_order_inherit" model="ir.actions.act_window">
        <field name="name">Quotations</field>
        <field name="res_model">sale.order</field>
        <field name="inherit_id" ref="sale.action_quotations"/>
        <field name="context">{
            'almus_restrict_price_edit': True,
            'is_sale_manager': user.has_group('sales_team.group_sale_manager')
        }</field>
    </record>
    
    <record id="action_almus_sale_order_all_inherit" model="ir.actions.act_window">
        <field name="name">Sales Orders</field>
        <field name="res_model">sale.order</field>
        <field name="inherit_id" ref="sale.action_orders"/>
        <field name="context">{
            'almus_restrict_price_edit': True,
            'is_sale_manager': user.has_group('sales_team.group_sale_manager')
        }</field>
    </record>
</odoo>