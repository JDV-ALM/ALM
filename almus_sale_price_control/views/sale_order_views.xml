<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario de orden de venta -->
    <record id="view_almus_sale_order_form" model="ir.ui.view">
        <field name="name">almus.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Agregar campo de lista de precios en las líneas de orden -->
            <xpath expr="//field[@name='order_line']/form//field[@name='product_uom']" position="after">
                <field name="line_pricelist_id" 
                       options="{'no_create': True, 'no_create_edit': True}"
                       groups="base.group_user"/>
            </xpath>
            
            <!-- También agregar en la vista de árbol embebida -->
            <xpath expr="//field[@name='order_line']/list//field[@name='product_uom']" position="after">
                <field name="line_pricelist_id" 
                       optional="show"
                       options="{'no_create': True, 'no_create_edit': True}"
                       groups="base.group_user"/>
            </xpath>
            
            <!-- Agregar campo computado para controlar readonly -->
            <xpath expr="//field[@name='order_line']/form//group" position="inside">
                <field name="price_unit_readonly" invisible="1"/>
            </xpath>
            
            <xpath expr="//field[@name='order_line']/list" position="inside">
                <field name="price_unit_readonly" column_invisible="1"/>
            </xpath>
            
            <!-- Hacer el campo price_unit readonly condicionalmente -->
            <xpath expr="//field[@name='order_line']/list//field[@name='price_unit']" position="attributes">
                <attribute name="readonly">price_unit_readonly</attribute>
            </xpath>
            
            <xpath expr="//field[@name='order_line']/form//field[@name='price_unit']" position="attributes">
                <attribute name="readonly">price_unit_readonly</attribute>
            </xpath>
        </field>
    </record>
</odoo>