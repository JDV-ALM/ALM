<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Grupo para usuarios que pueden editar precios -->
    <record id="group_sale_price_editor" model="res.groups">
        <field name="name">Editor de Precios en Ventas</field>
        <field name="category_id" ref="base.module_category_sales_sales"/>
        <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        <field name="comment">Permite editar precios unitarios en líneas de venta incluso cuando las restricciones están activas</field>
    </record>
    
    <!-- Grupo para usuarios que pueden gestionar listas de precios -->
    <record id="group_pricelist_manager" model="res.groups">
        <field name="name">Gestor de Listas de Precios</field>
        <field name="category_id" ref="base.module_category_sales_sales"/>
        <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        <field name="comment">Permite ver y modificar listas de precios incluso cuando las restricciones están activas</field>
    </record>
    
    <!-- Asignar permisos al grupo de administradores de ventas -->
    <record id="sales_team.group_sale_manager" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_sale_price_editor')), (4, ref('group_pricelist_manager'))]"/>
    </record>
    
    <!-- Regla de registro para listas de precios - Solo lectura para usuarios normales -->
    <record id="rule_product_pricelist_readonly" model="ir.rule">
        <field name="name">Listas de Precios: Solo lectura para vendedores</field>
        <field name="model_id" ref="product.model_product_pricelist"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    
    <!-- Regla de registro para listas de precios - Acceso completo para administradores -->
    <record id="rule_product_pricelist_admin" model="ir.rule">
        <field name="name">Listas de Precios: Acceso completo para administradores</field>
        <field name="model_id" ref="product.model_product_pricelist"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
    
    <!-- Regla para items de lista de precios -->
    <record id="rule_product_pricelist_item_readonly" model="ir.rule">
        <field name="name">Items de Lista de Precios: Solo lectura para vendedores</field>
        <field name="model_id" ref="product.model_product_pricelist_item"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    
    <record id="rule_product_pricelist_item_admin" model="ir.rule">
        <field name="name">Items de Lista de Precios: Acceso completo para administradores</field>
        <field name="model_id" ref="product.model_product_pricelist_item"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
</odoo>