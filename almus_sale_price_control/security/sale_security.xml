<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Grupo para usuarios que pueden editar precios -->
    <record id="group_sale_price_editor" model="res.groups">
        <field name="name">Editor de Precios en Ventas</field>
        <field name="category_id" ref="base.module_category_sales_sales"/>
        <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        <field name="comment">Permite editar precios unitarios en líneas de venta incluso cuando las restricciones están activas</field>
    </record>
    
    <!-- Grupo para usuarios que pueden gestionar listas de precios -->
    <record id="group_pricelist_manager" model="res.groups">
        <field name="name">Gestor de Listas de Precios</field>
        <field name="category_id" ref="base.module_category_sales_sales"/>
        <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        <field name="comment">Permite ver y modificar listas de precios incluso cuando las restricciones están activas</field>
    </record>
    
    <!-- Asignar permisos al grupo de administradores de ventas -->
    <record id="sales_team.group_sale_manager" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_sale_price_editor')), (4, ref('group_pricelist_manager'))]"/>
    </record>
</odoo>