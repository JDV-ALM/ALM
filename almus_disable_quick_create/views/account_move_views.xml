<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista para Facturas - Control de Partners -->
    <record id="view_move_form_disable_partner_quick_create" model="ir.ui.view">
        <field name="name">almus.account.move.form.disable.partner.quick.create</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="options">{ 
                    'no_create': context.get('almus_disable_partner_quick_create', False), 
                    'no_create_edit': context.get('almus_disable_partner_create_edit', False)
                }</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_shipping_id']" position="attributes">
                <attribute name="options">{ 
                    'no_create': context.get('almus_disable_partner_quick_create', False), 
                    'no_create_edit': context.get('almus_disable_partner_create_edit', False)
                }</attribute>
            </xpath>
        </field>
    </record>
    
    <!-- Vista para Facturas - Control de Productos -->
    <record id="view_move_form_disable_product_quick_create" model="ir.ui.view">
        <field name="name">almus.account.move.form.disable.product.quick.create</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- List view (Odoo 18 usa list en lugar de tree) -->
            <xpath expr="//field[@name='invoice_line_ids']/list//field[@name='product_id']" position="attributes">
                <attribute name="options">{ 
                    'no_create': context.get('almus_disable_product_quick_create', False), 
                    'no_create_edit': context.get('almus_disable_product_create_edit', False)
                }</attribute>
            </xpath>
            <!-- Kanban view -->
            <xpath expr="//field[@name='invoice_line_ids']/kanban//field[@name='product_id']" position="attributes">
                <attribute name="options">{ 
                    'no_create': context.get('almus_disable_product_quick_create', False), 
                    'no_create_edit': context.get('almus_disable_product_create_edit', False)
                }</attribute>
            </xpath>
            <!-- Form view -->
            <xpath expr="//field[@name='invoice_line_ids']/form//field[@name='product_id']" position="attributes">
                <attribute name="options">{ 
                    'no_create': context.get('almus_disable_product_quick_create', False), 
                    'no_create_edit': context.get('almus_disable_product_create_edit', False)
                }</attribute>
            </xpath>
        </field>
    </record>
    
    <!-- Acciones para agregar contexto - Facturas de Cliente -->
    <record id="account.action_move_out_invoice_type" model="ir.actions.act_window">
        <field name="context">{
            'default_move_type': 'out_invoice',
            'almus_disable_partner_quick_create': env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_partner_quick_create', '0') == '1',
            'almus_disable_partner_create_edit': env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_partner_create_edit', '0') == '1',
            'almus_disable_product_quick_create': env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_product_quick_create', '0') == '1',
            'almus_disable_product_create_edit': env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_product_create_edit', '0') == '1'
        }</field>
    </record>
    
    <!-- Acciones para agregar contexto - Facturas de Proveedor -->
    <record id="account.action_move_in_invoice_type" model="ir.actions.act_window">
        <field name="context">{
            'default_move_type': 'in_invoice',
            'almus_disable_partner_quick_create': env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_partner_quick_create', '0') == '1',
            'almus_disable_partner_create_edit': env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_partner_create_edit', '0') == '1',
            'almus_disable_product_quick_create': env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_product_quick_create', '0') == '1',
            'almus_disable_product_create_edit': env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_product_create_edit', '0') == '1'
        }</field>
    </record>
    
    <!-- Acciones para agregar contexto - Notas de Crédito Cliente -->
    <record id="account.action_move_out_refund_type" model="ir.actions.act_window">
        <field name="context">{
            'default_move_type': 'out_refund',
            'almus_disable_partner_quick_create': env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_partner_quick_create', '0') == '1',
            'almus_disable_partner_create_edit': env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_partner_create_edit', '0') == '1',
            'almus_disable_product_quick_create': env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_product_quick_create', '0') == '1',
            'almus_disable_product_create_edit': env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_product_create_edit', '0') == '1'
        }</field>
    </record>
    
    <!-- Acciones para agregar contexto - Notas de Crédito Proveedor -->
    <record id="account.action_move_in_refund_type" model="ir.actions.act_window">
        <field name="context">{
            'default_move_type': 'in_refund',
            'almus_disable_partner_quick_create': env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_partner_quick_create', '0') == '1',
            'almus_disable_partner_create_edit': env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_partner_create_edit', '0') == '1',
            'almus_disable_product_quick_create': env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_product_quick_create', '0') == '1',
            'almus_disable_product_create_edit': env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_product_create_edit', '0') == '1'
        }</field>
    </record>
</odoo>