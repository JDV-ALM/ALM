<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista para deshabilitar creación rápida de partners en órdenes de compra -->
    <record id="view_purchase_order_form_disable_partner_quick_create" model="ir.ui.view">
        <field name="name">purchase.order.form.disable.partner.quick.create</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="options">{'no_create': context.get('almus_disable_partner_quick_create', False), 'no_create_edit': context.get('almus_disable_partner_create_edit', False)}</attribute>
            </xpath>
        </field>
    </record>
    
    <!-- Vista para deshabilitar creación rápida de productos en líneas de compra -->
    <record id="view_purchase_order_form_disable_product_quick_create" model="ir.ui.view">
        <field name="name">purchase.order.form.disable.product.quick.create</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list//field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_create': context.get('almus_disable_product_quick_create', False), 'no_create_edit': context.get('almus_disable_product_create_edit', False)}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_create': context.get('almus_disable_product_quick_create', False), 'no_create_edit': context.get('almus_disable_product_create_edit', False)}</attribute>
            </xpath>
        </field>
    </record>
    
    <!-- Acción para órdenes de compra con contexto actualizado -->
    <record id="purchase.purchase_rfq" model="ir.actions.act_window">
        <field name="context">{
            'almus_disable_partner_quick_create': bool(int(env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_partner_quick_create', '0'))),
            'almus_disable_partner_create_edit': bool(int(env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_partner_create_edit', '0'))),
            'almus_disable_product_quick_create': bool(int(env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_product_quick_create', '0'))),
            'almus_disable_product_create_edit': bool(int(env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_product_create_edit', '0')))
        }</field>
    </record>
    
    <record id="purchase.purchase_form_action" model="ir.actions.act_window">
        <field name="context">{
            'almus_disable_partner_quick_create': bool(int(env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_partner_quick_create', '0'))),
            'almus_disable_partner_create_edit': bool(int(env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_partner_create_edit', '0'))),
            'almus_disable_product_quick_create': bool(int(env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_product_quick_create', '0'))),
            'almus_disable_product_create_edit': bool(int(env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_product_create_edit', '0')))
        }</field>
    </record>
</odoo>