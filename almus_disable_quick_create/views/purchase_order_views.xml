<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista para Órdenes de Compra - Control de Partners -->
    <record id="view_purchase_order_form_disable_partner_quick_create" model="ir.ui.view">
        <field name="name">almus.purchase.order.form.disable.partner.quick.create</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="options">{ 
                    'no_create': context.get('almus_disable_partner_quick_create', False), 
                    'no_create_edit': context.get('almus_disable_partner_create_edit', False)
                }</attribute>
            </xpath>
        </field>
    </record>
    
    <!-- Vista para Órdenes de Compra - Control de Productos -->
    <record id="view_purchase_order_form_disable_product_quick_create" model="ir.ui.view">
        <field name="name">almus.purchase.order.form.disable.product.quick.create</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <!-- Tree view -->
            <xpath expr="//page[@name='products']//field[@name='order_line']//tree//field[@name='product_id']" position="attributes">
                <attribute name="options">{ 
                    'no_create': context.get('almus_disable_product_quick_create', False), 
                    'no_create_edit': context.get('almus_disable_product_create_edit', False)
                }</attribute>
            </xpath>
            <!-- Form view -->
            <xpath expr="//page[@name='products']//field[@name='order_line']//form//field[@name='product_id']" position="attributes">
                <attribute name="options">{ 
                    'no_create': context.get('almus_disable_product_quick_create', False), 
                    'no_create_edit': context.get('almus_disable_product_create_edit', False)
                }</attribute>
            </xpath>
            <!-- Kanban view -->
            <xpath expr="//page[@name='products']//field[@name='order_line']//kanban//field[@name='product_id']" position="attributes">
                <attribute name="options">{ 
                    'no_create': context.get('almus_disable_product_quick_create', False), 
                    'no_create_edit': context.get('almus_disable_product_create_edit', False)
                }</attribute>
            </xpath>
        </field>
    </record>
    
    <!-- Acción para agregar contexto -->
    <record id="purchase.purchase_form_action" model="ir.actions.act_window">
        <field name="context">{
            'almus_disable_partner_quick_create': env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_partner_quick_create', '0') == '1',
            'almus_disable_partner_create_edit': env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_partner_create_edit', '0') == '1',
            'almus_disable_product_quick_create': env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_product_quick_create', '0') == '1',
            'almus_disable_product_create_edit': env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_product_create_edit', '0') == '1'
        }</field>
    </record>
    
    <record id="purchase.purchase_rfq" model="ir.actions.act_window">
        <field name="context">{
            'almus_disable_partner_quick_create': env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_partner_quick_create', '0') == '1',
            'almus_disable_partner_create_edit': env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_partner_create_edit', '0') == '1',
            'almus_disable_product_quick_create': env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_product_quick_create', '0') == '1',
            'almus_disable_product_create_edit': env['ir.config_parameter'].sudo().get_param('almus_disable_quick_create.disable_product_create_edit', '0') == '1'
        }</field>
    </record>
</odoo>