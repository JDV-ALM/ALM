<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_almus_disable_quick_create_res_config_settings" model="ir.ui.view">
        <field name="name">almus.disable_quick_create.res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="almus_base.view_almus_base_res_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='almus_app_settings']" position="inside">
                <setting id="almus_disable_quick_create_settings" 
                         string="Control de Creación Rápida"
                         help="Controla la creación rápida de contactos y productos en ventas y compras">
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="almus_disable_partner_quick_create"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="almus_disable_partner_quick_create"/>
                                <div class="text-muted">
                                    Desactiva la opción "Crear" en campos de contacto
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="almus_disable_partner_create_edit"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="almus_disable_partner_create_edit"/>
                                <div class="text-muted">
                                    Desactiva la opción "Crear y editar" en campos de contacto
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="almus_disable_product_quick_create"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="almus_disable_product_quick_create"/>
                                <div class="text-muted">
                                    Desactiva la opción "Crear" en campos de producto
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="almus_disable_product_create_edit"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="almus_disable_product_create_edit"/>
                                <div class="text-muted">
                                    Desactiva la opción "Crear y editar" en campos de producto
                                </div>
                            </div>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>