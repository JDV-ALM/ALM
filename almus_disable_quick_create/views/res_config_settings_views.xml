<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_almus_disable_quick_create_res_config_settings" model="ir.ui.view">
        <field name="name">almus.disable_quick_create.res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="almus_base.view_almus_base_res_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='almus_app_settings']" position="inside">
                <setting id="almus_disable_quick_create_settings" 
                         string="Control de Creación Rápida"
                         help="Controla la creación rápida de contactos y productos en ventas y compras">
                    <div class="content-group">
                        <div class="mt-2">
                            <h4>Configuración de Contactos</h4>
                            <div class="row mt-3">
                                <label for="almus_disable_partner_quick_create" class="col-lg-6 o_light_label"/>
                                <field name="almus_disable_partner_quick_create"/>
                            </div>
                            <div class="row mt-2">
                                <label for="almus_disable_partner_create_edit" class="col-lg-6 o_light_label"/>
                                <field name="almus_disable_partner_create_edit"/>
                            </div>
                            <div class="text-muted mt-2">
                                <i class="fa fa-info-circle"/> Obliga a crear contactos desde el menú de Contactos
                            </div>
                        </div>
                        
                        <div class="mt-4">
                            <h4>Configuración de Productos</h4>
                            <div class="row mt-3">
                                <label for="almus_disable_product_quick_create" class="col-lg-6 o_light_label"/>
                                <field name="almus_disable_product_quick_create"/>
                            </div>
                            <div class="row mt-2">
                                <label for="almus_disable_product_create_edit" class="col-lg-6 o_light_label"/>
                                <field name="almus_disable_product_create_edit"/>
                            </div>
                            <div class="text-muted mt-2">
                                <i class="fa fa-info-circle"/> Obliga a crear productos desde el menú de Productos
                            </div>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>